+void get_kill_leases_hostname(char *hwaddr, char *hostname)
+{
+	if ( hwaddr == NULL || kill_leases == NULL )
+	{
+		return;
+	}
+
+	struct dhcp_lease_tmp *lease;
+	lease = kill_leases;
+	while(lease)
+	{
+		if ( strncmp(hwaddr, lease->hwaddr, 17) == 0 ) //find same mac
+		{
+			strcpy(hostname, lease->hostname);
+			return;
+		}
+		lease = lease->next;
+	}
+	strncpy(hostname, "*", 1);
+}
