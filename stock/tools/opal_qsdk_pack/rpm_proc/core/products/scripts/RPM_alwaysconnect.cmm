ON SYSDOWN GOSUB
(
	WAIT 10MS

	ON ERROR GOSUB
	(
		RETURN
	)

	WHILE SYSTEM.MODE()<6.
		SYSTEM.MODE ATTACH

	RETURN
)
STOP

ENDDO

